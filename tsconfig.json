{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./",
      "paths": {
        "@src/*": ["src/*"],
        "@pages/*": ["src/pages/*"],
        "@api/*": ["src/api/*"],
        "@utils/*": ["utils/*"],
        "@config/*": ["config/*"]
      }
    },
    "include": ["src/**/*", "config/**/*"],
    "exclude": ["node_modules"]
  }